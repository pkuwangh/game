{
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },
    "black-formatter.args": [
        "--line-length=100"
    ],
    "flake8.args": [
        "--max-line-length=100",
        "--ignore=E402,F841,F401,E302,E305,W503,W504,E124"
    ]
}
